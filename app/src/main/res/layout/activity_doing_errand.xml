<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NeedErrandActivity">

    <TextView
        android:id="@+id/post_errand_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="@color/font"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="10dp"
        android:text="Post an onging errand"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/see_errands_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/search_ongoing_requests_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/font"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="10dp"
        android:text="Search errands requests"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_errand_button" />

    <TextView
        android:id="@+id/see_errands_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/font"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="10dp"
        android:text="See your errands"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/post_errand_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/post_errand_button"
        app:layout_constraintTop_toTopOf="@+id/post_errand_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="Great!"
        android:textColor="@color/font"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="You can post the errand you will be doing for other people to see it and request you their items, or search for people who already posted their errand requests!"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>